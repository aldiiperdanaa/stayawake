<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/businessFieldRadioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@android:color/transparent"
        tools:text="Example Business Field"
        style="@style/TextBase_Regular"
        android:textColor="@color/textPrimary"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:drawableEnd="@drawable/checked_selector"
        android:drawableTint="@color/checked_color_selector"
        android:background="@drawable/checked_bg_selector" />

</androidx.constraintlayout.widget.ConstraintLayout>