<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  HEADING  -->
    <style name="Heading1">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:lineHeight">44sp</item>
    </style>
    <style name="Heading2">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:lineHeight">40sp</item>
    </style>
    <style name="Heading3">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:lineHeight">38sp</item>
    </style>
    <style name="Heading4">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:lineHeight">34sp</item>
    </style>
    <style name="Heading5">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight">32sp</item>
    </style>
    <style name="Heading6">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineHeight">28sp</item>
    </style>

    <!--  BODY TEXT  -->

    <!--  Text Large  -->
    <style name="TextLarge_Regular">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">28sp</item>
    </style>
    <style name="TextLarge_SemiBold">
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">28sp</item>
    </style>
    <style name="TextLarge_Bold">
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">28sp</item>
    </style>

    <!--  Text Base  -->
    <style name="TextBase_Regular">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
    </style>
    <style name="TextBase_SemiBold">
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
    </style>
    <style name="TextBase_Bold">
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
    </style>

    <!--  Text Small  -->
    <style name="TextSmall_Regular">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
    </style>
    <style name="TextSmall_SemiBold">
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
    </style>
    <style name="TextSmall_Bold">
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
    </style>

    <!--  Text Extra Small  -->
    <style name="TextExtraSmall_Regular">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
    </style>
    <style name="TextExtraSmall_SemiBold">
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
    </style>
    <style name="TextExtraSmall_Bold">
        <item name="android:fontFamily">@font/sf_pro_text_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
    </style>

    <!--  Input Style  -->
    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_underline_selector</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableTint">@color/textSecondary</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textColorHint">@color/textTertiary</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHighlight">@color/primary20</item>
        <item name="android:textCursorDrawable">@drawable/caret_color</item>
    </style>
    <style name="EditTextSearchStyle">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_search</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableTint">@color/textSecondary</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textColorHint">@color/textTertiary</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHighlight">@color/primary20</item>
        <item name="android:textCursorDrawable">@drawable/caret_color</item>
    </style>

    <!--  Bottom Sheet  -->
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
</resources>